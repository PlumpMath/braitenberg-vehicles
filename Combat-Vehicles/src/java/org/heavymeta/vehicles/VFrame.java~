package org.heavymeta.vehicles;

import javax.swing.*;


public class VFrame extends JFrame {
    public JPanel panel;
    public World world;
    public VRenderer renderer;

    public VFrame(Class rendererClass, World world)
    {
	init(rendererClass, world);
    }
    
    public void init(Class rendererClass, World world)
    {
        this.world = world;
	try {
	    try {
	        renderer = (VRenderer) rendererClass.newInstance();
	    }
	    catch (InstantiationException e) {
	        Log.error("unable to create renderer \"" + rendererClass + "\"" +
			  " [" + e.toString() + "]");
	    }
	}
	
	catch (IllegalAccessException e) {
	    Log.error("unable to create renderer \"" + rendererClass + "\"" +
	              " [" + e.toString() + "]");
	}
	
    	panel = renderer.newPanel();
    	panel.setSize(300,300);
    	getContentPane().add(panel);
    }
    
}

	
	
